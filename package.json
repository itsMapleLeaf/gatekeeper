{
  "name": "@itsmapleleaf/gatekeeper",
  "description": "a slash command and interaction framework for discord.js",
  "author": "itsmapleleaf",
  "version": "0.7.0",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.mjs",
      "require": "./dist/main.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": "https://github.com/itsMapleLeaf/gatekeeper",
  "homepage": "https://github.com/itsMapleLeaf/gatekeeper#readme",
  "bugs": "https://github.com/itsMapleLeaf/gatekeeper/issues",
  "keywords": [
    "discord",
    "discord.js",
    "slash",
    "command",
    "commands",
    "interaction",
    "message",
    "component",
    "framework",
    "bot",
    "react",
    "reactive",
    "declarative"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "pnpm -C playground run dev",
    "build": "tsup-node",
    "typecheck": "tsc --noEmit",
    "test": "jest --colors",
    "test-watch": "jest --watch",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "npm run lint -- --fix",
    "ci": "npm-run-all --parallel --print-label --continue-on-error build test lint && pnpm run typecheck",
    "format": "prettier --write .",
    "docs": "typedoc",
    "release": "bash ./scripts/release.sh"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fast-glob": "^3.2.7",
    "tslib": "^2.3.1"
  },
  "peerDependencies": {
    "discord.js": ">=13"
  },
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@babel/preset-typescript": "7.15.0",
    "@itsmapleleaf/configs": "1.0.0",
    "@rollup/plugin-replace": "3.0.0",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.0",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "cpy-cli": "3.1.1",
    "discord.js": "^13.2.0",
    "esbuild": "0.13.7",
    "esbuild-jest": "0.5.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "jest": "27.2.5",
    "jest-mock-console": "1.2.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "release-it": "14.11.6",
    "tsup": "^5.10.0",
    "typedoc": "0.22.5",
    "typescript": "4.4.4"
  },
  "tsup": {
    "entryPoints": [
      "src/main.ts"
    ],
    "target": "node16",
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true
  },
  "prettier": "@itsmapleleaf/configs/prettier",
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "ignorePatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/docs/**"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    },
    "verbose": true
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "github": {
      "release": true,
      "web": true
    }
  }
}
